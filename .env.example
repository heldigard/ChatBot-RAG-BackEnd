# Ejemplo de configuración (NO subir .env real al repo)

# Configuración de API compatible con OpenAI
OPENAI_API_KEY="tu-api-key-aqui"
OPENAI_API_BASE="https://api.openai.com/v1"  # Cambiar si usas otra API compatible
OPENAI_MODEL="gpt-4o-mini"  # Modelo a usar para generación

# Configuración de Embeddings
# true para usar embeddings de OpenAI, false para SentenceTransformer
USE_OPENAI_EMBEDDINGS=false
# Modelo de SentenceTransformer si USE_OPENAI_EMBEDDINGS=false
EMBEDDING_MODEL="all-MiniLM-L6-v2"
 # Modelo de embeddings de OpenAI si USE_OPENAI_EMBEDDINGS=true
OPENAI_EMBEDDING_MODEL="text-embedding-3-large"
# URL base para API de embeddings (dejar vacío para usar OPENAI_API_BASE)
OPENAI_EMBEDDING_API_BASE=""
# API key para embeddings (dejar vacío para usar OPENAI_API_KEY)
OPENAI_EMBEDDING_API_KEY=""

# Configuración de RAG
# Directorio con archivos PDF
PDF_DIRECTORY="./pdfs"
# Ruta para guardar el vector store
VECTOR_STORE_PATH="./vector_store"
# Tamaño de fragmentos de texto
CHUNK_SIZE=1000
# Superposición entre fragmentos
CHUNK_OVERLAP=200

# Configuración del servidor
HOST=0.0.0.0
PORT=8000
